{
  "extends": [
    "next/core-web-vitals",
    "plugin:react/recommended",
    "plugin:react/jsx-runtime"
  ],
  "plugins": ["prettier"],
  "rules": {
    "react/prop-types": "off",
    "prettier/prettier": [
      "error",
      {
        "singleQuote": false,
        "parser": "flow",
        "tabWidth": 2
      }
    ],

    "semi": ["error", "never", { "beforeStatementContinuationChars": "never" }]
  }
}
